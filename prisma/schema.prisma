generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Agent {
  id           String   @id @default(cuid())
  name         String
  task         String
  status       String   @default("ACTIVE")
  profile      String   // JSON string
  directives   String   // JSON string
  config       String   // JSON string
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  workspaces   Workspace[]
  cycles       AgentCycle[]
  memories     MemoryRecord[]
}

model Workspace {
  id          String   @id @default(cuid())
  agent       Agent    @relation(fields: [agentId], references: [id])
  agentId     String
  rootPath    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  files       WorkspaceFile[]
}

model WorkspaceFile {
  id          String   @id @default(cuid())
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId String
  path        String
  kind        String
  hash        String
  sizeBytes   Int
  metadata    String?  // JSON string
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AgentCycle {
  id            String   @id @default(cuid())
  agent         Agent    @relation(fields: [agentId], references: [id])
  agentId       String
  cycleIndex    Int
  userFeedback  String?
  startedAt     DateTime @default(now())
  completedAt   DateTime?
  proposal      ActionProposal?
  result        ActionResult?
  reflections   MemoryRecord[]

  @@unique([agentId, cycleIndex])
}

model ActionProposal {
  id          String      @id @default(cuid())
  cycle       AgentCycle  @relation(fields: [cycleId], references: [id])
  cycleId     String      @unique
  command     String
  arguments   String      // JSON string
  reasoning   String      // JSON string
  plan        String?     // JSON string
  createdAt   DateTime @default(now())
}

model ActionResult {
  id          String      @id @default(cuid())
  cycle       AgentCycle  @relation(fields: [cycleId], references: [id])
  cycleId     String      @unique
  success     Boolean
  output      String      // JSON string
  summary     String
  error       String?     // JSON string
  createdAt   DateTime @default(now())
}

model MemoryRecord {
  id          String   @id @default(cuid())
  agent       Agent    @relation(fields: [agentId], references: [id])
  agentId     String
  cycle       AgentCycle? @relation(fields: [cycleId], references: [id])
  cycleId     String?
  type        String
  content     String
  metadata    String?  // JSON string
  createdAt   DateTime @default(now())
}
