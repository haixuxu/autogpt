generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Agent {
  id           String   @id @default(cuid())
  name         String
  task         String
  status       String   @default("ACTIVE")
  profile      String   // JSON string
  directives   String   // JSON string
  config       String   // JSON string
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  workspaces   Workspace[]
  cycles       AgentCycle[]
  memories     MemoryRecord[]
  messages     AgentMessage[]
  steps        Step[]
}

model Workspace {
  id          String   @id @default(cuid())
  agent       Agent    @relation(fields: [agentId], references: [id])
  agentId     String
  rootPath    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  files       WorkspaceFile[]
}

model WorkspaceFile {
  id          String   @id @default(cuid())
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId String
  path        String
  kind        String
  hash        String
  sizeBytes   Int
  metadata    String?  // JSON string
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AgentCycle {
  id            String   @id @default(cuid())
  agent         Agent    @relation(fields: [agentId], references: [id])
  agentId       String
  cycleIndex    Int
  userFeedback  String?
  startedAt     DateTime @default(now())
  completedAt   DateTime?
  proposal      ActionProposal?
  result        ActionResult?
  reflections   MemoryRecord[]

  @@unique([agentId, cycleIndex])
}

model ActionProposal {
  id          String      @id @default(cuid())
  cycle       AgentCycle  @relation(fields: [cycleId], references: [id])
  cycleId     String      @unique
  command     String
  arguments   String      // JSON string
  reasoning   String      // JSON string
  plan        String?     // JSON string
  createdAt   DateTime @default(now())
}

model ActionResult {
  id          String      @id @default(cuid())
  cycle       AgentCycle  @relation(fields: [cycleId], references: [id])
  cycleId     String      @unique
  success     Boolean
  output      String      // JSON string
  summary     String
  error       String?     // JSON string
  createdAt   DateTime @default(now())
}

model MemoryRecord {
  id          String   @id @default(cuid())
  agent       Agent    @relation(fields: [agentId], references: [id])
  agentId     String
  cycle       AgentCycle? @relation(fields: [cycleId], references: [id])
  cycleId     String?
  type        String
  content     String
  metadata    String?  // JSON string
  createdAt   DateTime @default(now())
}

model AgentMessage {
  id        String   @id @default(cuid())
  agent     Agent    @relation(fields: [agentId], references: [id])
  agentId   String
  role      String   // user | assistant | system
  type      String   // thought | action | result | feedback | feedback_request | system
  content   String   // JSON string
  createdAt DateTime @default(now())
  handled   Boolean  @default(false)
  handledAt DateTime?
  handledBy String?

  @@index([agentId, createdAt])
  @@index([agentId, handled, createdAt])
}

model Step {
  id              String      @id @default(cuid())
  agent           Agent       @relation(fields: [agentId], references: [id])
  agentId         String
  stepIndex       Int
  name            String
  input           String      // JSON string
  output          String?     // JSON string
  status          String      @default("created") // created, running, completed, failed
  isLast          Boolean     @default(false)
  additionalInput String?     // JSON string
  additionalOutput String?    // JSON string
  startedAt       DateTime?
  completedAt     DateTime?
  createdAt       DateTime    @default(now())
  artifacts       Artifact[]

  @@unique([agentId, stepIndex])
  @@index([agentId, status])
}

model Artifact {
  id          String   @id @default(cuid())
  step        Step     @relation(fields: [stepId], references: [id], onDelete: Cascade)
  stepId      String
  fileName    String
  relativePath String?
  uri         String
  mimeType    String?
  sizeBytes   Int
  createdAt   DateTime @default(now())

  @@index([stepId])
}
