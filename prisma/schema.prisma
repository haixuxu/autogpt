generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Agent {
  id           String   @id @default(cuid())
  name         String
  task         String
  status       AgentStatus  @default(ACTIVE)
  profile      Json
  directives   Json
  config       Json
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  workspaces   Workspace[]
  cycles       AgentCycle[]
  memories     MemoryRecord[]
}

enum AgentStatus {
  ACTIVE
  PAUSED
  TERMINATED
}

model Workspace {
  id          String   @id @default(cuid())
  agent       Agent    @relation(fields: [agentId], references: [id])
  agentId     String
  rootPath    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  files       WorkspaceFile[]
}

model WorkspaceFile {
  id          String   @id @default(cuid())
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId String
  path        String
  kind        FileKind
  hash        String
  sizeBytes   Int
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum FileKind {
  DOCUMENT
  ARTIFACT
  SNAPSHOT
}

model AgentCycle {
  id            String   @id @default(cuid())
  agent         Agent    @relation(fields: [agentId], references: [id])
  agentId       String
  cycleIndex    Int
  userFeedback  String?
  startedAt     DateTime @default(now())
  completedAt   DateTime?
  proposal      ActionProposal?
  result        ActionResult?
  reflections   MemoryRecord[]

  @@unique([agentId, cycleIndex])
}

model ActionProposal {
  id          String      @id @default(cuid())
  cycle       AgentCycle  @relation(fields: [cycleId], references: [id])
  cycleId     String
  command     String
  arguments   Json
  reasoning   Json
  plan        Json?
  createdAt   DateTime @default(now())
}

model ActionResult {
  id          String      @id @default(cuid())
  cycle       AgentCycle  @relation(fields: [cycleId], references: [id])
  cycleId     String
  success     Boolean
  output      Json
  summary     String
  error       Json?
  createdAt   DateTime @default(now())
}

model MemoryRecord {
  id          String   @id @default(cuid())
  agent       Agent    @relation(fields: [agentId], references: [id])
  agentId     String
  cycle       AgentCycle? @relation(fields: [cycleId], references: [id])
  cycleId     String?
  type        MemoryType
  content     String
  metadata    Json?
  embedding   Float[]
  createdAt   DateTime @default(now())
}

enum MemoryType {
  OBSERVATION
  REFLECTION
  PLAN
  RESULT
}

model MemoryIndex {
  id          String   @id @default(cuid())
  memory      MemoryRecord @relation(fields: [memoryId], references: [id])
  memoryId    String
  namespace   String
  score       Float
  createdAt   DateTime @default(now())

  @@index([namespace])
}
